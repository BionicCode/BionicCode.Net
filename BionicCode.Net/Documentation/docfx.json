{
  "metadata": [
    {
      "src": [
        {
          "files": [
            "BionicCode.Utilities.Net/**.csproj",
            "BionicCode.Utilities.Net.Wpf/**.csproj"
            //"**/**.csproj"
          ],
          "exclude": [
            //"**/BionicCode.Utilities.UnitTest**.csproj"
          ],
          "src": ".."
        }
      ],
      "dest": "api",
      //"properties": {
      //  "TargetFramework": "net6.0"
      //},
      "disableGitFeatures": false,
      "disableDefaultFilter": false
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "**/*.yml",
          "api/**.yml",
          "api/index.md"
        ]
      },
      {
        "files": [
          "articles/**.md",
          "articles/**/toc.yml",
          "toc.yml",
          "*.md"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "overwrite": [
      {
        "files": [
          "apidoc/**.md"
        ],
        "exclude": [
          "obj/**"
        ]
      }
    ],
    "dest": "../../Documentation",
    "globalMetadataFiles": [],
    "fileMetadataFiles": [],
    "template": [
      "default"
    ],
    "globalMetadata": {
      "_appTitle": "BionicCode.NET API Reference",
      "_appLogoPath": "../images/BionicCode_Logo.png",
      "_appFaviconPath": "../images/logo.ico",
      "_gitContribute": {
        "repo": "https://github.com/BionicCode/BionicCode.Net",
        "branch": "develop",
        "apiSpecFolder": "docs-ref-overwrite"
      },
      "_enableSearch": "true"
    },
    "postProcessors": [],
    "markdownEngineName": "markdig",
    "noLangKeyword": false,
    "keepFileLink": false,
    "cleanupCacheHistory": true,
    "disableGitFeatures": false
  }
}
