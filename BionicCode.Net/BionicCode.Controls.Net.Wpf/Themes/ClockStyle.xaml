<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:wpf="clr-namespace:BionicCode.Controls.Net.Wpf">
                    
    <Style TargetType="wpf:Clock">
      <Setter Property="ClockFace">
        <Setter.Value>
          <wpf:DigitalClockFace SelectedTime="{Binding RelativeSource={RelativeSource AncestorType=wpf:Clock}, Path=CurrentDateTime}" />
        </Setter.Value>
      </Setter>
      <Setter Property="Template">
        <Setter.Value>
          <ControlTemplate TargetType="wpf:Clock">
            <Border BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}">
              <ContentPresenter Content="{TemplateBinding ClockFace}"/>
            </Border>
          </ControlTemplate>
        </Setter.Value>
      </Setter>
    </Style>
</ResourceDictionary>