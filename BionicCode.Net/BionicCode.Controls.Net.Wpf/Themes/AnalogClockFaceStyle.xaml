    </Setter>
    <Setter Property="SecondHandElement">
      <Setter.Value>
        <Canvas>
          <Line X1="50"
                Y1="50"
                X2="50"
                Y2="34"
                Stroke="AntiqueWhite"
                StrokeThickness="1">
            <Line.Effect>
              <DropShadowEffect Opacity="1" RenderingBias="Quality" ShadowDepth="3" />
            </Line.Effect>
          </Line>
          <Ellipse Height="4"
                   Width="4"
                   Fill="AntiqueWhite"
                   Canvas.Left="48"
                   Canvas.Top="48" Panel.ZIndex="2">
            <Ellipse.Effect>
