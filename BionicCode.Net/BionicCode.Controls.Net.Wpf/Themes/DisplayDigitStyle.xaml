<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:wpf="clr-namespace:BionicCode.Controls.Net.Wpf">

  <Style TargetType="wpf:DisplayDigit">
    <!--<Setter Property="SegmentWidth" Value="400"/>-->
    <Setter Property="SegmentOnColor" Value="FloralWhite"/>
    <Setter Property="SegmentOffColor">
      <Setter.Value>
        <SolidColorBrush Color="DimGray" Opacity="0.2"/>
      </Setter.Value>
    </Setter>
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="wpf:DisplayDigit">
          <Border x:Name="PART_HostPanel"
                  BorderBrush="{TemplateBinding BorderBrush}"
                  BorderThickness="{TemplateBinding BorderThickness}"
                  Background="{TemplateBinding Background}"/>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>
</ResourceDictionary>